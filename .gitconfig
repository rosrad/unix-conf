[user]
	email = justnow.ren@gmail
	name = renbo
[alias]
    st = status
    ci = commit -v
    rmt = remote
    cm = commit -m
    cam = commit -a -m
    df = difftool
    dst = diff --name-status
    cst = show --name-status
    br = branch
    co = checkout
    lg = "log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --since=2days -n10"
    lgs= "log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --since=2days -n10  --name-status"
    cp = cherry-pick
    mg = merge    
[push]
	default = matching
[core]
	excludesfile = ~/source/config/git/.gitignore
[diff]
        tool = ediff
        guitool = ediff

[difftool "ediff"]
        cmd = ~/source/config/git/ediff.sh $LOCAL $REMOTE $MERGED

[merge]
        tool = ediff

[mergetool "ediff"]
        cmd = ~/source/config/git/ediff.sh $LOCAL $REMOTE $MERGED $BASE
        trustExitCode = true